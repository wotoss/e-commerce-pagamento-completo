@model NSE.WebApp.MVC.Models.UsuarioLogin

@{ 
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <section>
            <!--desta forma ele guarda a informação de onde eu estava vindo (asp-route-returnurl=")-->
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>Seja bem vindo e boas compras.</h4>
                <hr />
                <!--Lembrando que para usar o ViewCompanhi eu configurei um tagHalper na (_ViewImports.cshtml)-->
                <!--View Componente Summary vc-->
                <vc:summary></vc:summary>

                <!--input email-->
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!--input senha-->
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <!--Botão-->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>

                <!--Link para criar uma conta nova-->
                <div class="form-group">
                    <p>
                        <a asp-action="Registro" asp-controller="Identidade">Criar uma conta</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}